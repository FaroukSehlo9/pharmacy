@model List<catalog>


@{
    ViewData["Title"] = "home";
    Layout = "~/Views/_layout2.cshtml";
}



<div style="background-color:cadetblue;display: flex;flex-direction: column;
                align-items: center;padding-top: 38px;">

@foreach(catalog c in Model){
        <div class="col col-md-9 col-lg-7 col-xl-5" style="margin-top: 10px;margin-bottom: 10px;">
        <div class="card" style="border-radius: 15px;">
          <div class="card-body p-4">
            <div class="d-flex text-black">
              <div class="flex-grow-1 ms-3">
                <h2 class="mb-1"> @c.cat_name</h2>
                <h5 class="mb-2 pb-1" style="color: #2b2a2a;">Information about @c.cat_name </h5>
                <div class="d-flex justify-content-start rounded-3 p-2 mb-2" style="background-color: #efefef;">
                  <div>
                      <p>@c.cat_desc</p>
                  </div>
                </div>
                <div class="d-flex pt-1">
                    <a asp-controller="medicine" asp-action="med_in_cat" asp-route-id="@c.cat_id" 
                    class="btn btn-dark flex-grow-1"> show medicin about @c.cat_name</a>
                           
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    }
</div>